# Optimize pnpm for speed on AWS Amplify
prefer-offline=true
fetch-retries=2
fetch-retry-maxtimeout=10000
network-concurrency=16

# Use hardlinks for fastest installation
package-import-method=hardlink

# Skip optional dependencies to save time
optional=false

# Enable strict peer dependencies
strict-peer-dependencies=false

# Reduce lockfile conflicts
lockfile=true
